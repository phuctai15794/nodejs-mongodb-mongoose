<h3 class="title">Cập nhật khóa học</h3>
<div class="content">
    <form method="POST" action="/courses/{{ courseDetail._id }}/update?_method=PUT">
        <div class="form-group">
            <label for="name">Tiêu đề</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Tiêu đề khóa học" value="{{ courseDetail.name }}">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" name="description" id="description" rows="5" placeholder="Mô tả khóa học">{{ courseDetail.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" name="videoID" id="videoID" placeholder="Video ID khóa học" value="{{ courseDetail.videoID }}">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" name="level" id="level" placeholder="Level khóa học" value="{{ courseDetail.level }}">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>